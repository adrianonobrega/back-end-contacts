{
    "openapi":"3.0.0",
    "info":{
        "title":"API Contacts",
        "description":"API feita com a finalidade de um usuario adicionar contatos.",
    "version":"1.0.0"
    
    },
    "paths":{

        "/users/login":{
            "post":{
                "description":"Login de usuario",
                "tags":["Login"],
                "requestBody":{
                    "description":"Gerar o token",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schema/Login"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Login realizado com sucesso"
                    },
                    "400":{
                        "description":"Email ou senha invalidos"
                    }
                }
            }
        },
        "/users":{
            "post":{
                "description":"Criação de um usuario!",
                "tags":["User"],
                "requestBody":{
                    "description":"Dados para criação",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schema/RequestUser"
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"Usuario criado com sucesso"
                    },
                    "400":{
                        "description":"Dados passados incorretamente/email,cpf ou telefone ja estão cadastrados"
                    }
                }
            },
            "get":{
                "description":"Listar todos os usuario!",
                "security":[
                    {
                        "bearerAuth":[]
                    }
                ],
                "tags":["User"],
                
                "responses":{
                    "200":{
                        "description":"Listou todos os usuarios com sucesso"
                    },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    }
                }
            }
        },
        "/users/{id}":{
            "get":{
                "description":"Listar o usuario pelo id",
                "tags":["User"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do usuario",
                        "required":true
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Listou todos os usuarios com sucesso"
                    },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    },
                    "400":{
                        "description":"Usuario não existe"
                    }            
                }
            },
            "patch":{
                "description":"Atualizar o usuario pelo id",
                "tags":["User"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do usuario",
                        "required":true
                    }
                ],"requestBody":{
                    "description":"Dados para Atualização",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schema/UpdatedUser"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Atualizou o usuario"           
                    },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    },
                "400":{
                        "description":"Usuario não existe"
                     }          
                }
            },
            "delete":{
                "description":"Deletar o usuario pelo id",
                "tags":["User"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do usuario",
                        "required":true
                    }
                ],
                "responses":{
                    "204":{
                        "description":"Usuario deletado com sucesso"
                    },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    },
                    "400":{
                        "description":"Usuario não existe"
                        }            
                }
            }
        },

        

        "/contacts/":{
            
            "get":{
                "description":"Listar todos os contatos",
                "security":[{"bearerAuth":[]}],
                "tags":["Contacts"],
                
                "responses":{
                    "200":{
                        "description":"Listou todos os contatos com sucesso"
                    },
                    "400":{
                        "description":"Dados incompletos"
                    }
                }
            }
        },

        "/contacts/{id}":{
            "post":{
                "description":"Criação de um contato",
                "security":[{"bearerAuth":[]}],
                "tags":["Contacts"],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do usuario",
                        "required":true
                    }
                ],
                "requestBody":{
                    "description":"Dados para Atualização",
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{"type":"string","example":"José"},
                                    "email":{"type":"string","example":"jose@gmail.com"},
                                    "phone":{"type":"string","example":"(83)99999-9999"}

                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Contato criada com sucesso"
                    },
                    "400":{
                        "description":"Dados incompletos"
                    },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    }
                }
            },
            "patch":{
                "description":"Atualizar o contato pelo id",
                "tags":["Contacts"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do contato",
                        "required":true
                    }
                ],"requestBody":{
                    "description":"Dados para Atualização",
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{"type":"string","example":"José"},
                                    "email":{"type":"string","example":"jose@gmail.com"},
                                    "phone":{"type":"string","example":"(83)99999-9999"}

                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"contato atualizada com sucesso"
                    },
                    "400":{
                        "description":"contato não existe"
                  },
                  "401":{
                    "description":"Token invalido ou não foi passado"
                }

                }
            },
            "get":{
                "description":"Listar o contato pelo id",
                "tags":["Contacts"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do contato",
                        "required":true
                    }
                ],
                "responses":{
                    "200":{
                        "description":"contato atualizada com sucesso"
                    },
                    "400":{
                        "description":"contato não existe"
                  },
                  "401":{
                    "description":"Token invalido ou não foi passado"
                }

                }
            },
            "delete":{
                "description":"Deletar o contato pelo id",
                "tags":["Contacts"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do contato",
                        "required":true
                    }
                ],
                "responses":{
                    "204":{
                        "description":"contato deletada com sucesso"
                    },
                    "400":{
                        "description":"contato não existe"
                  },
                  "401":{
                    "description":"Token invalido ou não foi passado"
                }
                }
            }
        }

        
    },
    "components":{
        "schema":{
           
            "RequestUser": {
                "type":"object",
                "properties":{
                    "name":{
                        "type":"string",
                        "example":"Adriano"
                    },
                    "email":{
                        "type":"string",
                        "example":"adrinc@gmail.com"
                    },
                    "password":{
                        "type":"string",
                        "example":"abc1234"
                    },
                    "phone":{
                        "type":"string",
                        "example":"(83)939398454"
                    }
                    
                }
            },
            "UpdatedUser": {
                "type":"object",
                "properties":{
                    "name":{
                        "type":"string",
                        "example":"Adriano Nóbrega"
                    },
                    "email":{
                        "type":"string",
                        "example":"adriano@gmail.com"
                    },
                    "password":{
                        "type":"string",
                        "example":"abc1234567"
                    },
                    "phone":{
                        "type":"string",
                        "example":"(83)939398686"
                    }
                }
            },
            "RequestContacts": {
                "type":"object",
                "properties":{
                    "name":{
                        "type":"string",
                        "example":"adriano"
                    },
                    "email":{
                        "type":"string",
                        "example":"adriano@gmail.com"
                    },
                    "phone":{
                        "type":"string",
                        "example":"(83)99999-9999"
                    }
                }
            },
            "Login":{
                "type":"object",
                "properties":{
                    "email":{"type":"string","example":"adrinc@gmail.com"},
                    "password":{"type":"string","example":"abc1234"}
                }
            }
 
        },
        "securitySchemes":{
            "bearerAuth":{
                "type":"http",
                "scheme":"bearer",
                "bearerFormat":"JWT"
            }
        }
    }
        
}